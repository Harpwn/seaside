{
  "rootDir": ".",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "lib": ["dom", "esnext"],
    "sourceMap": false,
    "paths": {
      "ebg/*": ["bga-framework.d.ts"],
      "dojo": ["bga-framework.d.ts"],
    },
  },
  "include": [
    "bga-framework.d.ts", 
    "src/**/*.ts",
    "src/types/bga-cards.d.ts",
    "src/types/seaside.d.ts",
    "src/types/bga-animations.d.ts",
    "node_modules/bga-help/**/*.d.ts",
    "node_modules/bga-zoom/**/*.d.ts"
  ]
}
